<!-- Global site tag (gtag.js) - Google Analytics -->
<script async src="https://www.googletagmanager.com/gtag/js?id=<%= data.env.GA_ID %>"></script>
<script>
  window.dataLayer = window.dataLayer || [];
  function gtag(){dataLayer.push(arguments);}
  gtag('js', new Date());

  <%# make sure to anonymize ip and disable remarketing for GDPR -%>
  gtag('config', '<%= data.env.GA_ID %>', {
    'anonymize_ip': true,
    'allow_display_features': false
  });
</script>
