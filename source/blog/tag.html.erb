---
pageable: true
per_page: 12
---
<h1>Articles tagged <em><%= tagname %></em></h1>

<% if paginate && num_pages > 1 %>
  <p>Page <%= page_number %> of <%= num_pages %></p>

  <% if prev_page %>
    <p><%= link_to 'Previous page', prev_page %></p>
  <% end %>
<% end %>

<ul>
  <% page_articles.each_with_index do |article, i| %>
    <li>
      <time pubdate datetime="<%= article.date.strftime('%Y-%M-%d') %>"><%= article.date.strftime('%Y, %b. %e') %></time>
      <%= link_to article.title, article %>
    </li>
  <% end %>
</ul>

<% if paginate %>
  <% if next_page %>
    <p><%= link_to 'Next page', next_page %></p>
  <% end %>
<% end %>
