---
pageable: true
per_page: 10
---
<% if paginate && num_pages > 1 %>
  <p>Page <%= page_number %> of <%= num_pages %></p>

  <% if prev_page %>
    <p><%= link_to 'Previous page', prev_page %></p>
  <% end %>
<% end %>

<% page_articles.each_with_index do |article, i| %>
  <div class="blog-post">
    <h2 class="blog-post-title"><%= link_to article.title, article %></h2>
    <p class="blog-post-meta"><%= article.date.strftime('%b %e') %> by <%= link_to "Andreas BÃ¶hrnsen", "/" %></p>
    <!-- use article.summary(250) if you have Nokogiri available to show just the first 250 characters -->
    <%= article.summary(250) %>
    <%# article.body %>
  </div> <!-- blog-post -->
<% end %>

<% if paginate %>
  <% if next_page %>
    <p><%= link_to 'Next page', next_page %></p>
  <% end %>
<% end %>
