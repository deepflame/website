<% blog.articles.each do |article| %>
  <article>
    <h1><%= link_to article.title, article %></h1>

    <header>
      <time pubdate datetime="<%= article.date.strftime('%Y-%M-%d') %>"><%= article.date.strftime('%b. %e %Y') %></time>
      <ul class="tags">
        <% article.tags.each do |tag| %>
          <li><%= link_to tag, tag_path(tag) %></li>
        <% end %>
      </ul>
    </header>

    <main>
      <%= strip_tags article.summary %>
    </main>
  </article>
<% end %>

